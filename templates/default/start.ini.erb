#===========================================================
# Jetty start.jar arguments
# Each line of this file is prepended to the command line
# arguments # of a call to:
#    java -jar start.jar [arg...]
#===========================================================
--exec
<% if node['jetty']['port'] < 1024 or (node['jetty']['ssl_port'] and node['jetty']['ssl_port'] < 1024) %>
# Set UID
jetty.startServerAsPrivileged=true
jetty.username=<%= node[:jetty][:user] %>
jetty.group=<%= node[:jetty][:group] %>
OPTIONS=setuid
etc/jetty-setuid.xml
<% end %>
<% for @option in node['jetty']['start_ini']['content'] %>
<%= @option %>
<% end %>
<% if node['jetty']['ssl_port'] and node['jetty']['ssl_subject'] %>
# HTTPS
jetty.keystore=etc/keystore
jetty.keystore.password=<%= node['jetty']['ssl_obfpass'] %>
jetty.keymanager.password=<%= node['jetty']['ssl_obfpass'] %>
jetty.truststore=etc/keystore
jetty.truststore.password=<%= node['jetty']['ssl_obfpass'] %>
jetty.secure.port=<%= node['jetty']['ssl_port'] %>
jetty.https.port=<%=node['jetty']['ssl_port']%>
etc/jetty-ssl.xml
etc/jetty-https.xml
<% end %>
